{deps, [
  {lager, ".*", {git, "https://github.com/basho/lager.git", "master"}},
  {ulitos, ".*", {git, "https://github.com/palkan/ulitos.git", {tag, "v0.2.0"}}},
  {sync, ".*", {git, "https://github.com/rustyio/sync.git", "master"}},
  {meck, ".*", {git, "https://github.com/eproxus/meck.git", {tag, "0.8.2"}}},
  {eunit_formatters, ".*", {git, "https://github.com/seancribbs/eunit_formatters.git", {branch, "master"}}},
  {lager_honeybadger_backend, ".*", {git, "https://github.com/fyler/lager_honeybadger_backend.git", {branch, "master"}}},
  {deliverly, ".*", {git, "https://github.com/deliverly/deliverly-core", {branch, "master"}}}
]}.
{require_otp_vsn, "18"}.
{erl_opts, [
  debug_info, 
  {i, "apps"}, 
  warn_unused_vars, 
  {parse_transform, lager_transform}
]}.
{clean_files, ["*.eunit", "ebin/*.beam", "specs/*.beam", "specs/logs/*"]}.
{eunit_opts, [
  no_tty,
  {report,{eunit_progress, [colored, profile]}}]}.